    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalkulator dni do egzaminów</title>
</head>
<body>
    
<header><h1>Kalkulator dni do egzaminów</h1></header>

<main>
    <label for="wydarzenie">Wydarzenie:</label> <br> 
    <select name="wydar" id="wydarz">
        <option value="">Wybierz z listy</option>
        <option value="2025-01-13">Egzamin INF.03 pisemny</option>
        <option value="2025-01-14">Egzamin INF.03 praktyczny</option>
        <option value="2025-05-05">Matura pisemna j.polski</option>
        <option value="2025-05-06">Matura pisemna matematyka</option>
        <option value="2025-05-07">Matura pisemna j.obcy</option>
    </select>
    <br>

    <label for="kalendarz">Wybierz datę:</label> <br>
    <input type="date" id="kalendarz">
    <br>

    <button id="dni">Sprawdź dni do egzaminu</button>
    <button id="ukryj">Ukryj kalendarz</button>
    <p id="wynik"></p>
</main>

<footer>
    &COPY; ME 
</footer>

<script>
const przyciskdni = document.querySelector('#dni');
const przyciskukryj = document.querySelector('#ukryj');
const kalendarz = document.querySelector('#kalendarz');
const wydarzenie = document.querySelector('#wydarz');
const wynik = document.querySelector('#wynik');

przyciskdni.addEventListener('click', (evt) => {
    evt.preventDefault();
    const dzisdata = new Date();
    let dataDocelowa;

    // Sprawdź, czy wybrano datę egzaminu z listy
    if (wydarzenie.value) {
        dataDocelowa = new Date(wydarzenie.value);
    } 
    // Sprawdź, czy wybrano własną datę z kalendarza
    else if (kalendarz.value) {
        dataDocelowa = new Date(kalendarz.value);
    } else {
        wynik.textContent = "Wybierz datę lub wydarzenie z listy.";
        return;
    }

    // Oblicz różnicę w dniach
    const roznicaCzasu = dataDocelowa - dzisdata;
    const roznicaDni = Math.ceil(roznicaCzasu / (1000 * 60 * 60 * 24));

    // Wyświetl wynik
    wynik.textContent = `Pozostało ${roznicaDni} dni do wybranej daty.`;
});

przyciskukryj.addEventListener('click', () => {
    kalendarz.style.display = kalendarz.style.display === 'none' ? 'inline' : 'none';
});
</script>

</body>
</html>







